NET "clk" LOC=E3;          # Clock signal (100 MHz)
NET "reset" LOC=J15 | PULLDOWN; # Reset button with pulldown

# Button assignments with pulldown resistors
NET "BTN1" LOC=H17 | PULLDOWN; # Button 1
NET "BTN2" LOC=H16 | PULLDOWN; # Button 2
NET "BTN3" LOC=H15 | PULLDOWN; # Button 3

# Product signals
NET "product1" LOC=A2;   # Product signal 1
NET "product2" LOC=A3;   # Product signal 2
NET "product3" LOC=A4;   # Product signal 3
NET "delivered" LOC=A5;  # Delivered signal

# Analog inputs
NET "an0" LOC=K26;       # Analog input 0
NET "an1" LOC=K25;       # Analog input 1
NET "an2" LOC=K24;       # Analog input 2
NET "an3" LOC=K23;       # Analog input 3

# Additional signals
NET "a" LOC=D25;         # Signal a
NET "b" LOC=D16;         # Signal b
NET "c" LOC=D23;         # Signal c
NET "d" LOC=D21;         # Signal d
NET "e" LOC=D20;         # Signal e
NET "f" LOC=D17;         # Signal f
NET "g" LOC=D83;         # Signal g
